<div class="page-header">
  <h3>
    <%= render 'shared/favorite', :item => @account %>
    <%= @account.title %>
    <% if @account.groups.present? %><small><%= @account.groups.map(&:name).join(', ') %></small><% end %>

    <%= link_to 'Delete', accounts_generic_account_path, :class => 'btn btn-small btn-danger pull-right', :confirm => 'Are you sure you want to delete this account?', :method => :delete %>
    <%= link_to 'Edit', edit_accounts_generic_account_path, :class => 'btn btn-small pull-right' %>
  </h3>
</div>

<div class="span8">
  <%= form_for [ :accounts, @account ] do |f| %>
    <div class="input-append">
      <%= f.label :username %>
      <%= f.text_field :username, :class => 'span7' %>
      <span class="add-on"><span class="clippy" data-text="<%= @account.username %>"></span></span>
    </div>

    <div class="input-append">
      <%= f.label :password %>
      <%= f.text_field :password, :class => 'span7' %>
      <span class="add-on"><span class="clippy" data-text="<%= @account.password %>"></span></span>
    </div>

    <div class="">
      <%= link_to "Download License File", @account.license_file_url %>
    </div>

    <%= f.label :comments %>
    <%= f.text_area :comments, :class => 'span8', :rows => 6 %>
  <% end %>
</div>

